algoritmo "Desafio_02_dimensoes_do_triangulo"
// Função : 
// Autor : Bruno Correia
// Data : 02/02/2022
// Seção de Declarações
var
	base: real
	altura: real

inicio

	escreva ("Digite o valor da base do triangulo: ")
	leia (base)
	escreva ("Digite o valor da altura do triangulo: ")
	leia (altura)

	escreval (" ")
	escreval ("A área do triangulo é", base*altura/2)

fimalgoritmo